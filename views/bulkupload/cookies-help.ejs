    <script>
        //TODO: Update delete cookie script
        var delete_cookie_help = function () {

            var getSelectedValue = document.querySelector('input[name="cookies-usage"]:checked');
            if (getSelectedValue != null && getSelectedValue.value == 'off') {
                document.cookie = '_ga=; domain=.beis.gov.uk; expires=' + new Date();
                document.cookie = '_gid=; domain=.beis.gov.uk; expires=' + new Date();
                document.cookie = '_gat=; domain=.beis.gov.uk; expires=' + new Date();
                document.cookie = '_ga_6BY67W4HKN=; domain=.beis.gov.uk; expires=' + new Date();
            }
            else if (getSelectedValue != null && getSelectedValue.value == 'on') {
                window.dataLayer = window.dataLayer || [];

                function gtag() {
                    dataLayer.push(arguments);
                }
                gtag('js', new Date());
            }

        };
    </script>
