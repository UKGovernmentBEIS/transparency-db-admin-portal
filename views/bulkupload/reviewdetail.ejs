      <!-- bread crumbs start here -->
      <div class="govuk-breadcrumbs ">
        <ol class="govuk-breadcrumbs__list">
          <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" href="/">Dashboard</a>
          </li>
          <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" href="/mysubsidyawards">Subsidy awards</a>
          </li>
          <li class="govuk-breadcrumbs__list-item">
            <a class="govuk-breadcrumbs__link" aria-current="page" href="#">Add a subsidy award</a>
          </li>
        </ol>
      </div>
      <!-- bread crumbs ends here -->

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds-from-desktop">
          <h1 class="govuk-heading-xl">Review subsidy award details before
            <% if(ssn.dashboard_roles == 'Granting Authority Encoder') { %>
            submitting for approval</h1>
          <% } else { %>
          Publishing
          <% } %>
          <!-- *************************************
              Review for subsidy details tab
              ************************************* -->
        </div>
        <div class="govuk-grid-column-full">
          <h2 class="govuk-heading-m" name="subsidydetails" value="subsidydetails">Subsidy details</h2>
          <a rel="external" aria-label="Change subsidy details" class="govuk-link head-right govuk-relative-position"
            href="/addsubsidyreview">
            <p>Change </p>
          </a>
        </div>
      </div>
      <dl class="govuk-summary-list govuk-!-margin-bottom-9">
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Subsidy control (SC) number
          </dt>
          <dd class="govuk-summary-list__value">
            <% if (ssn.Subsidy_Control_Number_Global !== '') { %>
            <%= ssn.Subsidy_Control_Number_Global %>
            <% } else { %>
            NA
            <% } %>
          </dd>

        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Subsidy scheme name
          </dt>
          <dd class="govuk-summary-list__value">
            <% if (ssn.Subsidy_Measure_Title_Global !== '') { %>
            <%= ssn.Subsidy_Measure_Title_Global %>
            <% } else { %>
            NA
            <% } %>
          </dd>

        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Subsidy purpose
          </dt>
          <dd class="govuk-summary-list__value">
            <%=  ssn.Subsidy_Objective_Plus_Other_Global %>
          </dd>

        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Subsidy type
          </dt>
          <dd class="govuk-summary-list__value">
            <%=  ssn.Subsidy_Instrument_Plus_Other_Global %>

          </dd>
        </div>

        <% if( ssn.Subsidy_Instrument_Global == "Tax measures (tax credit, or tax/duty exemption)"  ) { %>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Subsidy range
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.Subsidy_Full_Amount_Range_Global %>
          </dd>
        </div>

        <% } else { %>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Subsidy amount
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.Subsidy_Element_Full_Amount_Global %>
          </dd>
        </div>

        <% }  %>


        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Granting Authority
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.Granting_Authority_Name_Global %>
          </dd>

        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Award date
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.Legal_Granting_Date_Day_Global %> &nbsp; <%= ssn.GetMonthName %> &nbsp;
            <%= ssn.Legal_Granting_Date_Year_Global %>
          </dd>

        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Added by
          </dt>
          <dd class="govuk-summary-list__value">
            <%=ssn.dashboard_user_name%>
          </dd>

        </div>

      </dl>

      <!-- *************************************
              Review for beneficialry details tab
              ************************************* -->

      <h2 class="govuk-heading-m">Recipient details</h2>
      <a rel="external" aria-label="Change Recipient details" class="govuk-link head-right govuk-relative-position"
        href="/addsubsidyreview">
        <p>Change </p>
      </a>
      <dl class="govuk-summary-list govuk-!-margin-bottom-9">

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Organisation name
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.Beneficiary_Name_Global %>
          </dd>

        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Organisation size
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.Size_of_the_Organisation_Global %>

          </dd>
        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            ID Type
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.National_ID_Type_Global %>
          </dd>

        </div>
        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            ID number
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.National_ID_Number_Global %>
          </dd>

        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Provider of(goods or services)
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.Goods_or_Services_Global %>
          </dd>

        </div>


        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Region
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.Spending_Region_Global %>

          </dd>
        </div>

        <div class="govuk-summary-list__row">
          <dt class="govuk-summary-list__key">
            Sector
          </dt>
          <dd class="govuk-summary-list__value">
            <%= ssn.Spending_Sector_Global %>

          </dd>
        </div>

      </dl>



      <form action="/submitforapproval" method="post" novalidate>

        <input type="hidden" name="answers-checked" value="true">

        <button class="govuk-button" data-module="govuk-button">
          Submit for Approval
        </button>

        <a href="/subsidyawardreviewcancel" class="govuk-link govuk-cancel-button-link">Cancel</a>
      </form>

