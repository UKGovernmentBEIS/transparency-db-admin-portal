  <%- include('../partials/header.ejs') %>

  <div class="govuk-width-container">
    <main class="govuk-main-wrapper" id="main-content" role="main">
      <!-- <legend class="govuk-fieldset__legend govuk-fieldset__legend--l form-group"> -->
      <h1 class="govuk-heading-xl">
        Sign into the Transparency Database
      </h1>
      <!-- </legend> -->
      <form action="/choosedashboard" method="POST">
        <div class="govuk-grid-row">
          <div class="govuk-form-group govuk-grid-column-two-thirds">
            <legend class="govuk-fieldset__legend">
              <label class="label" for="sort">Select user</label>
            </legend>
            <select class="govuk-select govuk-grid-column-two-thirds" id="dashboard_username" name="dashboard_username"
              aria-label="select user">
              <option value="" disabled selected>38 Options Available</option>
              <option value="Andrew Davis">Andrew Davis</option>
              <option value="Albert Einstein">Albert Einstein</option>
              <option value="Barry Smith">Barry Smith</option>
              <option value="Claire Jones">Claire Jones</option>
              <option value="Mary Johnson">Mary Johnson</option>
              <option value="Michael Robinson">Michael Robinson</option>
            </select>
          </div>
          <div class="govuk-form-group govuk-grid-column-two-thirds">
            <legend class="govuk-fieldset__legend">
              <label class="label" for="sort">Select the role you have</label>
            </legend>
            <select class="govuk-select govuk-grid-column-two-thirds" id="ssn.dashboard_roles"
              name="ssn.dashboard_roles" aria-label="select role" onchange=handleChange(event)>
              <option value="" disabled selected>4 Roles Available</option>
              <option value="BEIS Administrator">BEIS Administrator</option>
              <option value="Granting Authority Administrator">Granting Authority Administrator</option>
              <option value="Granting Authority Approver">Granting Authority Approver</option>
              <option value="Granting Authority Encoder">Granting Authority Encoder</option>
            </select>
          </div>
          <div class="govuk-form-group govuk-grid-column-two-thirds">
            <legend class="govuk-fieldset__legend">
              <label class="label" for="sort">
                Select the granting authority
              </label>
            </legend>
            <select class="govuk-select govuk-grid-column-two-thirds" id="dashboard_GA" name="dashboard_GA"
              aria-label="select the granting authority">
              <option value="" disabled selected>
                43 Granting Authorities Available
              </option>
              <option value="HMRC">HMRC</option>
              <option value="BFI">BFI</option>
              <option value="Big Lottery Fund">Big Lottery Fund</option>
              <option value="Birmingham City Council">Birmingham City Council</option>
              <option value="Blaenau Gwent County Borough Council">Blaenau Gwent County Borough Council</option>
              <option value="Carmenthenshire County Council">Carmenthenshire County Council</option>
            </select>
          </div>
          <div class="govuk-form-group govuk-grid-column-two-thirds">
            <!-- <p class="govuk-body">
              <a class="govuk-link" href="/loginforgetpassword">
