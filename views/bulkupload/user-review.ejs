<!DOCTYPE html>
<html lang="en">

<head>
    <title>GOV.UK - Review User page</title>
    <%- include('../partials/headercss.ejs') %>

</head>

<body class="govuk-template__body app-example-page">
    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <%- include('../partials/cookies-consent.ejs') %> <%- include('../partials/header.ejs') %>
    <div class="govuk-width-container ">
        <main id="main-content" role="main">
            <div class="govuk-phase-banner">
                <p class="govuk-phase-banner__content">
                    <strong class="govuk-tag govuk-phase-banner__content__tag">
                        beta
                    </strong>
                    <span class="govuk-phase-banner__text">
                        This is a new service â€“ your <a class="govuk-link" href="/feedbackform">feedback</a> will help
                        us to improve it.
                    </span>
                </p>
            </div>
            <%- include('../partials/navigationbar.ejs') %>

            <div class="govuk-breadcrumbs ">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/">Dashboard</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/userselect">Users</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" aria-current="page" href="#">Add a new user</a>
                    </li>
                </ol>
            </div>


            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds-from-desktop">
                    <br />

                    <h1 class="govuk-heading-xl">Review user invitation details</h1>

                    <!-- *************************************
              Review for subsidy details tab
              ************************************* -->
                </div>
                <div class="govuk-grid-column-full">
                    <h2 class="govuk-heading-m" name="subsidydetails" value="subsidydetails">New user details</h2>
                    <a rel="external" class="govuk-link head-right govuk-relative-position" href="/adduser?change=Yes">
                        <p>Change </p>
                    </a>
                </div>
            </div>
            <dl class="govuk-summary-list govuk-!-margin-bottom-9">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Role
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%= ssn.User_Role_Global.replace('Granting', 'Public') %>
                    </dd>

                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Public Authority name
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%= ssn.GA_Name_User_Global %>
                    </dd>

                </div>


                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Email address
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%= ssn.Email_Id_Global %>
                    </dd>
                </div>

            </dl>

            <!-- *************************************
              Review for beneficialry details tab
              ************************************* -->

            <form action="/usersubmit" method="post" novalidate>
                <button class="govuk-button" data-module="govuk-button">
                    Continue
                </button>

                <a href="/canceluser" class="govuk-link govuk-cancel-button-link">Cancel</a>
            </form>

    </div>

    </main>
    </div>


</body>

<%- include('../partials/footer.ejs') %>

<script>
    document.getElementById('user-li').firstElementChild.setAttribute("aria-current", 'page');
</script>

</html>