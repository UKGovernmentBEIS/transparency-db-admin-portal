<body class="govuk-template__body app-example-page">
    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>
    <%- include('../partials/cookies-consent.ejs') %> <%- include('../partials/header.ejs') %>
    <div class="govuk-width-container ">
        <main id="main-content" role="main">
            <div class="govuk-phase-banner">
                <p class="govuk-phase-banner__content">
                    <strong class="govuk-tag govuk-phase-banner__content__tag">
                        beta
                    </strong>
                    <span class="govuk-phase-banner__text">
                        This is a new service â€“ your <a class="govuk-link" href="/feedbackform">feedback</a> will help
                        us to improve it.
                    </span>
                </p>
            </div>
            <%- include('../partials/navigationbar.ejs') %>

            <!-- bread crumbs start here -->
            <div class="govuk-breadcrumbs ">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/">Dashboard</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/mygrantingauthority">Granting Authority</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" aria-current="page" href="#">Edit Granting Authority</a>
                    </li>
                </ol>
            </div>
            <!-- bread crumbs ends here -->

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds-from-desktop">
                    <h1 class="govuk-heading-xl"> Edit granting authority</h1>

                    <!-- *************************************
                            Review for subsidy details tab
                    ************************************* -->
                </div>
                <div class="govuk-grid-column-full">
                    <h2 class="govuk-heading-m" name="subsidydetails" value="subsidydetails">Granting authority details


                    </h2>
                    <a rel="external" aria-label="Change granting authority details"
                        class="govuk-link head-right govuk-relative-position"
                        href="/editgrantingauthority?edit=<%=ssn.grantingAuthorityID_Global%>">
                        <p>Change </p>
                    </a>
                </div>
            </div>
            <dl class="govuk-summary-list govuk-!-margin-bottom-9">
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Granting authority ID
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%=ssn.grantingAuthorityID_Global%>
                    </dd>

                </div>
                <div class="govuk-summary-list__row">
                    <dt class="govuk-summary-list__key">
                        Granting authority name
                    </dt>
                    <dd class="govuk-summary-list__value">
                        <%=ssn.grantingAuthorityName_Global%>
                    </dd>

                </div>

            </dl>

            <!-- <form action="/submitforapproval" method="post" novalidate> -->
            <% if(ssn.grantingAuthorityPublish_Global) { %>
            <form method="POST" action="/submitgrantingauthority">
                <input type="hidden" name="editReview" value="true">
                <input type="hidden" value="<%= ssn.grantingAuthorityID_Global %>" name="grantingAuthorityID">
                <input type="hidden" value="<%= ssn.grantingAuthorityName_Global %>" name="grantingAuthorityName">
                <button class="govuk-button" data-module="govuk-button">
                    Publish
                </button>
            </form>
            <% } else { %>

            <a class="govuk-button" href="/mygrantingauthority" data-module="govuk-button">
                Back to granting authority list
            </a>

            <a class="govuk-button govuk-button--warning"
                href="/deactivategrantingauthority?gaId=<%=ssn.grantingAuthorityID_Global%>&gaName=<%=ssn.grantingAuthorityName_Global%>"
                data-module="govuk-button">
                Deactivate granting authority
            </a>
            <!-- <a class="govuk-link govuk-cancel-button-link" id="mylink" value="cancel"
                href="/editgacancel?gaId=<%=ssn.grantingAuthorityID_Global%>&gaName=<%=ssn.grantingAuthorityName_Global%>">
                Cancel
            </a> -->
            <!-- </form> -->
            <% } %>
        </main>
    </div>

    <%- include('../partials/footer.ejs') %>
    <script>
        document.getElementById('ga-li').firstElementChild.setAttribute("aria-current", 'page');
    </script>
</body>

</html>