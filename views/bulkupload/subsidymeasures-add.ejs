            <!-- Body header starts here -->
            <h1 class="govuk-heading-xl">Add a subsidy measure</h1>

            <p class="govuk-body govuk-!-font-size-19">This section is for adding one subsidy measure.</p>
            <!-- Body header ends here -->
            <label class="govuk-heading-l">
                Subsidy measure details
            </label>

            <form action="/reviewsubsidymeasures" method="POST">
                <section class="govuk-grid-row">

                    <div class="govuk-form-group govuk-grid-column-two-thirds">
                        <label class="govuk-label" for="address-line-1">
                            Granting Authority
                        </label>
                        <input class="govuk-input govuk-!-width-one-half" value="Cardiff Council" disabled name=""
                            type="text">
                    </div>
                    <div class="govuk-form-group govuk-grid-column-two-thirds">
                        <label class="govuk-label" for="address-line-1">
                            Subsidy measure name
                        </label>
                        <div id="passport-issued-hint" class="govuk-hint">This is the name of the
                            subsidy measure that awards
                            can be related to.</div>
                        <input class="govuk-input govuk-!-width-one-half" name="" type="text">
                    </div>
                    <div class="govuk-form-group govuk-grid-column-two-thirds">
                        <label class="govuk-label" for="address-line-1">
                            Legal basis
                        </label>
                        <div id="passport-issued-hint" class="govuk-hint">Description text required</div>
                        <input class="govuk-input govuk-!-width-one-half" name="" type="text">
                    </div>
                    <div class="govuk-form-group govuk-grid-column-two-thirds">
                        <label class="govuk-label" for="address-line-1">
                            Weblink to Granting Authority Text of Subsidy
                        </label>
                        <div id="passport-issued-hint" class="govuk-hint">Description text required</div>
                        <input class="govuk-input govuk-!-width-one-half" name="" type="text">
                    </div>
                    <div class="govuk-form-group govuk-grid-column-two-thirds">
                        <label class="govuk-label" for="address-line-1">
                            Budget (Â£)
                        </label>
                        <div id="passport-issued-hint" class="govuk-hint">Description text required</div>
                        <input class="govuk-input govuk-!-width-one-third" name="" type="text">
                    </div>
                    <div class="govuk-form-group govuk-grid-column-two-thirds">
                        <label class="govuk-label" for="address-line-1">
                            Start Date
                        </label>
                        <div id="passport-issued-hint" class="govuk-hint">
                            For example, 25 3 2020
                        </div>
                        <div class="govuk-date-input" id="passport-issued">
                            <div class="govuk-date-input__item">
                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-date-input__label" for="passport-issued-day">
                                        Day
                                    </label>
                                    <input class="govuk-input govuk-date-input__input govuk-input--width-2"
                                        id="passport-issued-day" name="passport-issued-day" type="text" placeholder="DD"
                                        pattern="[0-9]*" inputmode="numeric"></div>
                            </div>
                            <div class="govuk-date-input__item">
                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-date-input__label" for="passport-issued-month">
                                        Month
                                    </label>
                                    <input class="govuk-input govuk-date-input__input govuk-input--width-2"
                                        id="passport-issued-month" name="passport-issued-month" placeholder="MM"
                                        type="text" pattern="[0-9]*" inputmode="numeric"></div>
                            </div>
                            <div class="govuk-date-input__item">
                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-date-input__label" for="passport-issued-year">
                                        Year
                                    </label>
                                    <input class="govuk-input govuk-date-input__input govuk-input--width-4"
                                        id="passport-issued-year" name="passport-issued-year" type="text"
                                        pattern="[0-9]*" inputmode="numeric" placeholder="YYYY"></div>
                            </div>
                        </div>

                    </div>
                    <div class="govuk-form-group govuk-grid-column-two-thirds">
                        <label class="govuk-label" for="address-line-1">
                            End Date
                        </label>
                        <div id="passport-issued-hint" class="govuk-hint">
                            For example, 25 3 2021
                        </div>
                        <div class="govuk-date-input" id="passport-issued">
                            <div class="govuk-date-input__item">
                                <div class="govuk-form-group">
                                    <label class="govuk-label govuk-date-input__label" for="passport-issued-day">
                                        Day
                                    </label>
                                    <input class="govuk-input govuk-date-input__input govuk-input--width-2"
                                        id="passport-issued-day" name="passport-issued-day" type="text" placeholder="DD"
                                        pattern="[0-9]*" inputmode="numeric"></div>
                            </div>
                            <div class="govuk-date-input__item">
                                <div class="govuk-form-group">
