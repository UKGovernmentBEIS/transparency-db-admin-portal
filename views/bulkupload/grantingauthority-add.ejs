      <!-- <legend class="govuk-fieldset__legend govuk-fieldset__legend--l form-group"> -->
      <h1 class="govuk-heading-l">Add granting authority</h1>
      <!-- </legend> -->
      <div class="govuk-grid-row">
        <form action="/reviewgrantingauthority" method="POST">

          <% if( ssn.grantingAuthorityName_Error){ %>
          <div class="govuk-error-summary" id="error-alert" aria-labelledby="error-summary-title" role="alert"
            data-module="govuk-error-summary">
            <h2 class="govuk-error-summary__title" id="error-summary-title">
              There is a problem
            </h2>
            <div class="govuk-error-summary__body">
              <ul class="govuk-list govuk-error-summary__list">
                <li>
                  <a href="#GAName"><%= ssn.grantingAuthorityName_Error_Msg %></a>
                </li>
              </ul>
            </div>
          </div>
          <div class="govuk-grid-column-one-half govuk-form-group  govuk-form-group--error">
            <% } else { %>
            <div class="govuk-grid-column-one-half govuk-form-group ">
              <% } %>
              <!-- <form action="/filtersearch" method="POST" > -->
              <label for="GAName" class="govuk-label">Granting authority name</label>
              <% if( ssn.grantingAuthorityName_Error){ %>
              <span class="govuk-error-message" id="grantingAuthorityName_Error">
                <span class="govuk-visually-hidden">Error:</span> <%= ssn.grantingAuthorityName_Error_Msg %>
              </span>
              <% } %>
              <input class="govuk-input" value="<%= ssn.grantingAuthorityName_Global %>" id="GAName"
                name="grantingAuthorityName" type="text" />
              <!-- </form>  -->
            </div>
            <div class="govuk-grid-column-three-quarters">
              <!-- <form action="/mygrantingauthority"> -->
              <button class="govuk-button govuk-button--success">
                Continue
              </button>
              <a class="govuk-link govuk-cancel-button-link" id="mylink" href="/cancelgrantingauthority">
                Cancel
              </a>
              <!-- </form> -->
            </div>
        </form>
      </div>
      <!-- </div>
      </div> -->
