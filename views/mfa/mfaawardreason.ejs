<!DOCTYPE html>
<html lang="en">

<head>
    <title>GOV.UK - MFA Award <%= Award_status %> page</title>
    <%- include('../partials/headercss.ejs') %>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-145652997-21"></script>
</head>

<body class="govuk-template__body app-example-page">
    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>
    <%- include('../partials/cookies-consent.ejs') %> <%- include('../partials/header.ejs') %>
    <div class="govuk-width-container ">
        <main id="main-content" role="main">
            <div class="govuk-phase-banner">
                <p class="govuk-phase-banner__content">
                    <strong class="govuk-tag govuk-phase-banner__content__tag">
                        beta
                    </strong>
                    <span class="govuk-phase-banner__text">
                        This is a new service â€“ your <a class="govuk-link" href="/feedbackform">feedback</a> will help
                        us to improve it.
                    </span>
                </p>
            </div>

            <%- include('../partials/navigationbar.ejs') %>

            <!-- bread crumbs start here -->
            <div class="govuk-breadcrumbs ">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/">Dashboard</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="#">MFA</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/mfaawards">MFA Awards</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/mfaaward?id=<%=awardnumber%>"><%= awardnumber %></a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" aria-current="page" href="#"><%=Award_status%> MFA
                            award</a>
                    </li>
                </ol>
            </div>
            <!-- bread crumbs ends here -->
            <p>
                <a href="/mfaaward?id=<%=awardnumber%>" class="govuk-back-link"> Back</a>
            </p>
            <!-- bread crumbs ends here -->
            <div class="govuk-grid-row" id="regression-search-area">
                <div class="govuk-grid-column-two-thirds-from-desktop">
                    <h1 class="govuk-heading-xl">Add comments</h1>
                    <form action="/mfaawardreasonsubmit" method="POST">

                        <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="1000">
                            <div class="govuk-form-group">
                                <% if(Award_status == 'Reject') {%>
                                <label class="govuk-label" for="label-as-page-heading">
                                    Add feedback for the person who is working on this
                                    subsidy award. Your comments will not be visible to the public.
                                </label>
                                <% } else { %>
                                <label class="govuk-label" for="label-as-page-heading">Give a reason why you are
                                    deleting this award. Your comments will not be visible to the public.</label>
                                <% } %>
                                <textarea class="govuk-textarea govuk-js-character-count" id="label-as-page-heading"
                                    name="reject_reason_text" rows="6"
                                    aria-describedby="label-as-page-heading-info"></textarea>
                            </div>
                            <div id="label-as-page-heading-info" class="govuk-hint govuk-character-count__message"
                                aria-live="polite">
                                You can enter up to 1,000 characters
                            </div>
                        </div>
                        <% if(Award_status == 'Reject') { %>
                        <button class="govuk-button govuk-button--warning" value="Rejected" name="buttonValue"
                            data-module="govuk-button">
                            Reject MFA award
                        </button>
                        <% } else { %>
                        <button class="govuk-button govuk-button--warning" name="buttonValue" value="Deleted"
                            data-module="govuk-button">
                            Delete MFA award
                        </button>
                        <% } %>
                    </form>
                </div>
            </div>
        </main>
    </div>
    <%- include('../partials/footer.ejs') %>
    <script>
        document.getElementById('mfa-li').firstElementChild.setAttribute("aria-current", 'page');
    </script>
</body>
</html>