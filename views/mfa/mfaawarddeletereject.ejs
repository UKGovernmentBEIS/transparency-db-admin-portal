<!DOCTYPE html>
<html lang="en">

<head>
    <title>GOV.UK - <%=Award_status%> MFA award page</title>
    <%- include('../partials/headercss.ejs') %>
</head>

<body class="govuk-template__body app-example-page">
    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <%- include('../partials/cookies-consent.ejs') %> <%- include('../partials/header.ejs') %>
    <div class="govuk-width-container ">
        <main id="main-content" role="main">
            <div class="govuk-phase-banner">
                <p class="govuk-phase-banner__content">
                    <strong class="govuk-tag govuk-phase-banner__content__tag">
                        beta
                    </strong>
                    <span class="govuk-phase-banner__text">
                        This is a new service â€“ your <a class="govuk-link" href="/feedbackform">feedback</a> will help
                        us to improve it.
                    </span>
                </p>
            </div>
            <%- include('../partials/navigationbar.ejs') %>

            <!-- bread crumbs start here -->
            <div class="govuk-breadcrumbs ">
                <ol class="govuk-breadcrumbs__list">
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/">Dashboard</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="#">MFA</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/mfaawards">MFA Awards</a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" href="/mfaaward?id=<%=awardnumber%>"><%= awardnumber %></a>
                    </li>
                    <li class="govuk-breadcrumbs__list-item">
                        <a class="govuk-breadcrumbs__link" aria-current="page" href="#"><%=Award_status%> MFA
                            award</a>
                    </li>
                </ol>
            </div>
            <!-- bread crumbs ends here -->

            <!-- Body header starts here -->
            <div class="govuk-body-cancel govuk-form-group">
                <h1 class="govuk-heading-l"><%=Award_status%> MFA award</h1>

                <p class="govuk-body govuk-!-font-size-19">Are you sure you want to <%=Award_status_lower%> this subsidy
                    award?</p>
                <form action="/mfaawardrejectdelete" method="POST">
                    <input type="hidden" value="<%=Award_status%>" name="status">
                    <input type="hidden" value="<%=awardnumber%>" name="awardnumber">
                    <button class="govuk-button govuk-button--secondary">
                        Yes, <%=Award_status_lower%> MFA award
                    </button>
                    <a href="/mfaaward?id=<%=awardnumber%>"
                        class="govuk-button govuk-button_sm govuk-button--secondary" data-module="govuk-button">
                        Cancel
                    </a>
                </form>
            </div>
        </main>
    </div>

    <%- include('../partials/footer.ejs') %>
    <script>
        document.getElementById('mfa-li').firstElementChild.setAttribute("aria-current", 'page');
    </script>
</body>

</html>